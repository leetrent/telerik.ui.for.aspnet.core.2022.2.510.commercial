<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <h4>Set / Get Value</h4>
        <ul class="options">
            <li>
                <input id="value" type="text" />
                <button id="set">Set value</button>
            </li>
            <li style="text-align: right;">
                <button id="get">Get value</button>
            </li>
        </ul>
    </div>
    <div class="box-col">
        <h4>Find item</h4>
        <ul class="options">
            <li>
                <input id="word" value="B" />
                <button id="search">Search</button>
            </li>
        </ul>
    </div>
</div>
<div class="demo-section">
    <h4>Pick a color</h4>
    @(Html.Kendo().AutoComplete()
                    .Name("input")
            .BindTo(new string[]
            {
            "Red-violet",
            "Red",
            "Red-orange",
            "Orange",
            "Yellow-orange",
            "Yellow",
            "Yellow-green",
            "Green",
            "Blue-green",
            "Blue",
            "Blue-violet",
            "Violet"
            })
            .HtmlAttributes(new { style = "width:100%;" })
    )

    <div class="demo-hint">Hint: type "red"</div>
</div>
            
@section scripts {
<script>
    $(document).on("kendoReady", function() {
        var autocomplete = $("#input").data("kendoAutoComplete"),
            setValue = function(e) {
                if (e.type != "keypress" || kendo.keys.ENTER == e.keyCode)
                    autocomplete.value($("#value").val());
            },
            setSearch = function(e) {
                if (e.type != "keypress" || kendo.keys.ENTER == e.keyCode)
                    autocomplete.search($("#word").val());
            };

        $("#set").click(setValue);
        $("#value").keypress(setValue);
        $("#search").click(setSearch);
        $("#word").keypress(setSearch);

        $("#get").click(function() {
            alert(autocomplete.value());
        });
    });
</script>
}

