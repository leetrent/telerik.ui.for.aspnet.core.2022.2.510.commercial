<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Size:</h4>
                <input id="size" name="size" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Rounded:</h4>
                <input id="rounded" name="rounded" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>FillMode:</h4>
                <input id="fillMode" name="fillMode" />
            </li>
        </ul>
    </div>
</div>

<div class="demo-section">
    <h4>Select item</h4>
    @(Html.Kendo().ComboBox()
                .Name("combobox")
                .DataTextField("Text")
                .DataValueField("Value")
                .Filter("startswith")
                .Rounded(Rounded.Medium)
                .FillMode(FillMode.Solid)
                .Size(ComponentSize.Medium)
                .HtmlAttributes(new { style = "width:100%;" })
                .BindTo(new List<SelectListItem>()
                {
                    new SelectListItem() {
                        Text = "Item 1", Value = "1"
                    },
                    new SelectListItem() {
                        Text = "Item 2", Value = "2"
                    },
                    new SelectListItem() {
                        Text = "Item 3", Value = "3"
                    }
                })
        )
</div>
<script>
    $(document).ready(function () {

        var combobox = $("#combobox").data("kendoComboBox");

        var size = $("#size").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            value: "medium",
            change: onChange,
            dataSource: [
                { text: "Small", value: "small" },
                { text: "Medium", value: "medium" },
                { text: "Large", value: "large" }
            ]
        }).data("kendoDropDownList");

        var rounded = $("#rounded").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            change: onChange,
            value: "medium",
            dataSource: [
                { text: "Small", value: "small" },
                { text: "Medium", value: "medium" },
                { text: "Large", value: "large" },
                { text: "Full", value: "full" }
            ]
        }).data("kendoDropDownList");

        var fill = $("#fillMode").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            change: onChange,
            value: "solid",
            dataSource: [
                { text: "Solid", value: "solid" },
                { text: "Flat", value: "flat" },
                { text: "Outline", value: "outline" }
            ]
        }).data("kendoDropDownList");

        function onChange(e) {

            var sizeValue = size.value();
            var roundedValue = rounded.value();
            var fillValue = fill.value();
            var selectedValues = combobox.value();
            combobox.value([]);
            combobox.setOptions({
                size: sizeValue,
                rounded: roundedValue,
                fillMode: fillValue
            })
            combobox.value(selectedValues);
        }
    })
</script>