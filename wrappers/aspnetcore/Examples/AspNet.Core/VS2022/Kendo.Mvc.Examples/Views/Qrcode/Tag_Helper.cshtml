@addTagHelper *, Kendo.Mvc

<div class="demo-section">
    <h3>E-mail</h3>
    <kendo-qrcode name="qrMail" value="mailto:clientservice@telerik.com" color="#e15613" background="transparent" size="120">
    </kendo-qrcode>
</div>
<div class="demo-section">
    <h3>URL</h3>
    <kendo-qrcode name="qrUrl" value="https://demos.telerik.com/kendo-ui/qrcode/index" error-correction="QRErrorCorrectionLevel.M" size="120">
        <border color="#000000" width="5" />
    </kendo-qrcode>
</div>
<div class="demo-section">
    <h3>Telephone</h3>
    <kendo-qrcode name="qrTelephone" color="#67a814" value="tel:+1-888-365-2779" error-correction="QRErrorCorrectionLevel.Q" size="120">
        <border color="#67a814" width="5" />
    </kendo-qrcode>
</div>
<div class="demo-section">
    <h3>Geo Location</h3>
    <kendo-qrcode name="qrGeoLocation" color="#166a83" value="geo:42.65049,23.37925,100" error-correction="QRErrorCorrectionLevel.H" size="120">
    </kendo-qrcode>
</div>

<style>
    .demo-section {
        display: inline-block;
        margin: 17px;
    }

    .k-qrcode {
        display: inline-block;
        margin: 10px 0 0;
        border: none;
    }
</style>