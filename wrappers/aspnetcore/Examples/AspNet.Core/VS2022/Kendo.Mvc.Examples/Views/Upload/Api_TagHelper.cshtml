@addTagHelper *, Kendo.Mvc
@using Kendo.Mvc.UI

<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <h4>API Functions</h4>
        <ul class="options">
            <li>
                <button class="toggleEnabled k-button k-button-flat-base k-button-flat k-button-md k-rounded-md k-icon-button">Toggle enabled state</button>
            </li>
            <li>
                <button class="enable k-button k-button-flat-base k-button-flat k-button-md k-rounded-md k-icon-button">Enable</button> <button class="disable k-button k-button-flat-base k-button-flat k-button-md k-rounded-md k-icon-button">Disable</button>
            </li>
        </ul>
    </div>
</div>
<form method="post">
    <div class="demo-section">
        <kendo-upload name="files">
            <async auto-upload="true" save-url="@Url.Action("Api_Save", "Upload")" remove-url="@Url.Action("Api_Remove", "Upload")" />
        </kendo-upload>
    </div>
</form>
<script>
            function getUpload() {
                return $("#files").data("kendoUpload");
            }

            $(document).ready( function () {
                $(".toggleEnabled").click(function () {
                    getUpload().toggle();
                });

                $(".enable").click(function () {
                    getUpload().enable();
                });

                $(".disable").click(function () {
                    getUpload().disable();
                });
            });
</script>
