@using Kendo.Mvc.UI

@section HeadContent
{
    <style>
        #gauge-container {
            width: 386px;
            height: 386px;
            text-align: center;
            margin: 20px auto 30px auto;
        }

        #gauge {
            width: 350px;
            height: 300px;
            margin: 0 auto;
        }

        #gauge-container .k-slider {
            margin-top: 15px;
            width: 250px;
        }
    </style>
}

<div id="example">
    <div id="gauge-container">
        @(Html.Kendo().CircularGauge()
            .Name("gauge")
            .Value(55)
            .Scale(x =>
               x.Min(0)
                 .Max(140)
                 .MajorTicks(M=>M.Visible(true))
                 .MinorTicks(m => m.Visible(true))
                 .Labels(l => l.Visible(true))
            )
            .CenterTemplate("Temperature")
         )
        @(Html.Kendo().Slider()
            .Name("gauge-value")
            .Value(55)
            .Min(0)
            .Max(140)
            .ShowButtons(true)
            .Events(e => e.Change("updateValue"))
            .HtmlAttributes(new { title = "slider" })
        )
    </div>

    @section scripts {
        <script>
            function updateValue() {
                $("#gauge").data("kendoCircularGauge").value($("#gauge-value").val());
            }
        </script>
    }
</div>
