<div class="demo-section hidden-on-narrow wide">
    <div class="column">
        <h3 class="title"><label for="picker">Choose Your Color</label></h3>
        @(Html.Kendo().ColorPicker()
            .Name("picker")
            .Value("#ff0000")
            .Format(ColorPickerFormat.Rgb)
            .Formats(new string[] { "rgb", "hex" })
        )
    </div>
    <div class="column">
        <h3 class="title"><label for="picker">Choose Your Color</label></h3>
        @(Html.Kendo().ColorPicker()
            .Name("no-inputs-picker")
            .Value("#fff700")
            .Input(false)
            .Format(ColorPickerFormat.Rgb)
            .Formats(new string[] { "rgb", "hex" })
        )
    </div>
</div>

<style>
    .demo-section {
        display: inline-flex;
        width: 100%;
        box-sizing: border-box;
    }

    .column {
        margin: auto;
        text-align: center;
    }

        .column .title {
            color: #a3a3a3;
            text-transform: uppercase;
            font-size: 11px;
            font-weight: normal;
            padding: 41px 0 20px;
        }

    .k-colorpicker {
        vertical-align: top;
        margin: 20px 0;
    }
</style>
