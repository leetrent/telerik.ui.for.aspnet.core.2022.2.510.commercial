@addTagHelper *, Kendo.Mvc

<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <h4>Configuration</h4>
        <div>
            <button id="value1">Start Value to 0</button>
            <button id="value2">Start Value to 25</button>
            <button id="value3">Start Value to 50</button>
            <button id="value4">Start Value to 75</button>
            <button id="value5">Start Value to 100</button>
        </div>
    </div>
</div>

<script id="progress-template" type="text/kendo-ui-template">
    <span style='color: #: color #;'>#: value #%</span>
</script>

<kendo-circularprogressbar name="progressbar" value=0 center-template-id="progress-template">
    <colors>
        <color to=25 color="#C0392B"/>
        <color from=25 to=50 color="#D35400"/>
        <color from=50 to=75 color="#D4AC0D"/>
        <color from=75 to=100 color="#229954"/>
    </colors>
</kendo-circularprogressbar>

@section scripts {
    <script>
        $(document).on("kendoReady", function() {
            $("#value1").kendoButton({
                click: function () {
                    let pb = $("#progressbar").data("kendoCircularProgressBar");
                    pb.value(0);
                }
            });

            $("#value2").kendoButton({
                click: function () {
                    let pb = $("#progressbar").data("kendoCircularProgressBar");
                    pb.value(25);
                }
            });

            $("#value3").kendoButton({
                click: function () {
                    let pb = $("#progressbar").data("kendoCircularProgressBar");
                    pb.value(50);
                }
            });

            $("#value4").kendoButton({
                click: function () {
                    let pb = $("#progressbar").data("kendoCircularProgressBar");
                    pb.value(75);
                }
            });

            $("#value5").kendoButton({
                click: function () {
                    let pb = $("#progressbar").data("kendoCircularProgressBar");
                    pb.value(100);
                }
            });
        })
    </script>
}

<style>
    #progressbar {
        margin: 3em;
    }
</style>