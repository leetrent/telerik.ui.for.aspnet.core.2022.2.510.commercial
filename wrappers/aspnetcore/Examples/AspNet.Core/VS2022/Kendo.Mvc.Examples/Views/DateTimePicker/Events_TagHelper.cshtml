@addTagHelper *, Kendo.Mvc


<div class="demo-section">
    <h3 class="title">
        Select date and time
    </h3>
    <kendo-datetimepicker name="datetimepicker" on-change="change" on-open="open" on-close="close" style="width:100%;">
    </kendo-datetimepicker>
</div>

<script>
    function open(e) {
        kendoConsole.log("Open :: " + e.view + "-view");
    }

    function close(e) {
        kendoConsole.log("Close :: " + e.view + "-view");
    }

    function change() {
        kendoConsole.log("Change :: " + kendo.toString(this.value(), 'g'));
    }
</script>