@addTagHelper *, Kendo.Mvc

<kendo-grid name="grid" on-change="onChange" persist-selection="true">
    <columns>
        <column selectable="true" width="50">
        </column>
        <column field="ProductName" width="100">
        </column>
        <column field="UnitPrice" width="100">
        </column>
        <column field="UnitsInStock" width="100" format="{0:dd/MM/yyyy}">
        </column>
        <column field="Discontinued" width="100" format="{0:dd/MM/yyyy}">
        </column>
    </columns>
    <datasource page="0" batch="false" type="DataSourceTagHelperType.Ajax" page-size="5">
        <schema data="Data" total="Total" errors="Errors">
        </schema>
        <transport>
            <read url="@Url.Action("Selection_Read", "Grid" )" />
        </transport>
    </datasource>
    <pageable button-count="5">
        <messages display="{0} - {1} of {2} items" empty="No items to display" page="Page" of="of {0}" items-per-page="items per page" first="Go to the first page" previous="Go to the previous page" next="Go to the next page" last="Go to the last page" refresh="Refresh" more-pages="More pages" />
    </pageable>
</kendo-grid>

<style>
    .console div {
        height: 3.3em;
    }
</style>

<script>
    function onChange(arg) {
        kendoConsole.log("The selected product ids are: [" + this.selectedKeyNames().join(", ") + "]");
    }
</script> 