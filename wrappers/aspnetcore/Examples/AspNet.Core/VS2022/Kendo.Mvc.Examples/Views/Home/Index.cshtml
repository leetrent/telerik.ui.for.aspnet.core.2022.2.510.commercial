@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
	<link href="@String.Format("{0}/styles/kendo-ui-demos/hubpage.min.css{1}", ViewBag.AssetsCDN, Html.Version())" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/shared/hubpage.min.js" + Html.Version())"></script>
	<script type="text/javascript" src="@String.Format("{0}/scripts/kendo-ui-demos/app-theme.min.js{1}",ViewBag.AssetsCDN, Html.Version())"></script>
}

