    <section class="kd-components-list">
        <div class="container">
            <div class="row">
                <div class="col col-8">
                    <h1 class="kd-title heading">ASP.NET Core Components</h1>

                    <div class="row">
                        @{
                            var categories = (IEnumerable<IGrouping<string, NavigationWidget>>)ViewBag.WidgetCategories;
                            var columns = new[] {
                                new [] {
                                    "Data Management",
                                    "Navigation",
                                    "Media",
                                    "Barcodes"
                                },
                                new [] {
                                    "Editors",
                                    "Conversational UI",
                                },
                                new [] {
                                    "Charts",
                                    "Gauges",
                                    "PDF",
                                },
                                new [] {
                                    "Scheduling",
                                    "Layout",
                                    "Interactivity & UX",
                                    "Diagrams & Maps"
                                },
                            };
                        }

                        @foreach (var column in columns)
                        {
                            <div class="col-3">
                                <ul class="kd-list">
                                    @foreach (var columnCategory in column)
                                    {
                                        var category = categories.FirstOrDefault(c => c.Key == columnCategory);
                                        if (category.Any(c => c.ShouldInclude()))
                                        {
                                            <li>
                                                <h2 class="kd-title">@category.Key</h2>
                                                <ul class="kd-list">
                                                    @foreach (var widget in category)
                                                    {
                                                        if (widget.ShouldInclude())
                                                        {
                                                            <li>@Html.WidgetLink(widget, (string)ViewBag.NavProduct)</li>
                                                        }
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
                <div class="col col-2">
                    <h1 class="kd-title heading">Common Features</h1>
                    <div class="row">
                        <div class="col-12">
                            <ul class="kd-list">
                                @{
                                    var common = new[] {
                                        "Framework",
                                        "Document Processing",
                                        "Reporting"
                                    };

                                    foreach (var commonCategory in common)
                                    {
                                        var categoryC = categories.FirstOrDefault(c => c.Key == commonCategory);
                                        if (categoryC.Any(c => c.ShouldInclude()))
                                        {
                                            <li>
                                                <h2 class="kd-title">@categoryC.Key</h2>
                                                <ul class="kd-list">
                                                    @foreach (var widget in categoryC)
                                                    {
                                                        if (widget.ShouldInclude())
                                                        {
                                                            <li>@Html.WidgetLink(widget, (string)ViewBag.NavProduct)</li>
                                                        }
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col col-2">
                    <h1 class="kd-title heading">Tools</h1>
                    <div class="row">
                        <div class="col-12">
                            <ul class="kd-list">
                                <li>
                                    <ul class="kd-list">
                                        <li class="kd-link-group">
                                            <a class="kd-link" href="https://themebuilder.telerik.com/"><span class="link-text">SASS ThemeBuilder</span></a>
                                            <p class="kd-text">Create and modify SASS based themes for Kendo UI widgets.</p>
                                        </li>
                                        <li class="kd-link-group">
                                            <a class="kd-link" href="https://www.telerik.com/download/custom-download"><span class="link-text">Download Builder</span></a>
                                            <p class="kd-text">Create a single JavaScript file which contains only the required widgets and features.</p>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="kd-contact-support">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <h1 class="kd-title">Not finding the help you need?</h1>
                </div>
                <div class="col-4 text-right">
                    <a href="https://www.telerik.com/contact" class="kd-button kd-button-secondary kd-button-md">Contact Support</a>
                </div>
            </div>
        </div>
    </section>
</main>

