            <span class='k-icon k-i-close kendo-icon'></span>
        # } else if(!item.items && !item.spriteCssClass) { #
            <span class="k-sprite pdf"></span>
            #: item.text #
            <span class='k-icon k-i-close telerik-icon'></span>
