@using Kendo.Mvc.UI

<div class="demo-section">
    @(Html.Kendo().MaskedTextBox()
          .Name("maskedtextbox")
          .Mask("(999) 000-0000")
          .Events(events => events.Change("change"))
    )
</div>

@section scripts {
    <script>
        function change() {
            kendoConsole.log("Change :: " + this.value());
        }
    </script>
}

<style>
    .demo-section {
        width: 500px;
        text-align: center;
    }

    .console {
        margin: 0;
    }
</style>