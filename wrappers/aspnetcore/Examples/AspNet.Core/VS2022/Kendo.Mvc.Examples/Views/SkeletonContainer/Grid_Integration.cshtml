@(Html.Kendo().Grid<Kendo.Mvc.Examples.Models.EmployeeViewModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(o => o.EmployeeID).Width(110).Title("#");
        columns.Bound(o => o.FirstName);
        columns.Bound(o => o.LastName);
        columns.Bound(o => o.City).Title("Responsible For");
        columns.Bound(o => o.Country).Title("Based In");
        columns.Bound(o => o.Title);
    })
    .LoaderType(GridLoaderType.Skeleton)
    .Sortable()
    .Scrollable(scrollable => scrollable.Virtual(true))
    .HtmlAttributes(new { style = "height: 543px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("Virtualization_Read", "Grid", new { rows = 1000 }))
     )
)

<style>
    /*horizontal Grid scrollbar should appear if the browser window is shrinked too much*/
    #grid table {
        min-width: 1190px;
    }
</style>