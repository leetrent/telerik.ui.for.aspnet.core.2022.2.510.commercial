@addTagHelper *, Kendo.Mvc
<div class="demo-section">
    <div>
        <h4>Basic Button</h4>
        <p>
            <kendo-button name="primaryTextButton"
                          theme-color="ThemeColor.Primary">
                Primary Button
            </kendo-button>

            <kendo-button name="textButton">
                Button
            </kendo-button>
        </p>
    </div>

    <div>
        <h4>Disabled buttons</h4>
        <p>
            <kendo-button name="primaryDisabledButton1"
                          tag="span"
                          enable="false"
                          theme-color="ThemeColor.Primary">
                Primary disabled via configuration
            </kendo-button>

            <kendo-button name="disabledButton1"
                          tag="span"
                          enable="false">
                Disabled via configuration
            </kendo-button>
        </p><br />

        <p>
            <kendo-button name="primaryDisabledButton2"
                          tag="span" 
                          disabled="disabled"
                          theme-color="ThemeColor.Primary">
                Primary disabled via HTML attribute
            </kendo-button>

            <kendo-button name="disabledButton2"
                          tag="span"
                          disabled="disabled">
                Disabled via HTML attribute
            </kendo-button>
        </p>
    </div>

    <div>
        <h4>Buttons with icons</h4>
        <p>
            <kendo-button name="iconTextButton"
                          tag="a"
                          icon="filter">
                Icon and text
            </kendo-button>

            <kendo-button name="kendoIconTextButton"
                          tag="a"
                          icon="filter-clear">
                Kendo UI icon
            </kendo-button>

            <kendo-button name="iconButton"
                          tag="em"
                          icon="refresh">
                <span class='k-icon' title='Refresh'></span>
            </kendo-button>
        </p>
    </div>
</div>

<style>
    .demo-section p {
        margin: 0 0 30px;
        line-height: 50px;
    }

        .demo-section p .k-button {
            margin: 0 10px 0 0;
        }

    .k-button-solid-primary {
        min-width: 150px;
    }
</style>