@addTagHelper *, Kendo.Mvc
@using Kendo.Mvc.UI

<div class="demo-section k-rtl">
    <h4>Basic Button</h4>
    <p>
        <kendo-button name="textButton">
            Submit
        </kendo-button>
    </p>

    <h4>Buttons with icons</h4>
    <p>
        <kendo-button name="iconTextButton" tag="a" icon="filter">
            Filter
        </kendo-button>

        <kendo-button name="iconButton" tag="em" icon="refresh">
            <span class='k-icon' title='Refresh'></span>
        </kendo-button>
    </p>

    <h4>Disabled Button</h4>
    <p>
        <kendo-button name="disabledButton" tag="span" enable="false">
            Disabled
        </kendo-button>
    </p>
</div>

<style>
    .demo-section p {
        margin: 0 0 30px;
        line-height: 4em;
    }

    .demo-section .k-button {
        margin-left: 10px;
    }

    #textButton, #disabledButton {
        width: 150px;
    }
</style>