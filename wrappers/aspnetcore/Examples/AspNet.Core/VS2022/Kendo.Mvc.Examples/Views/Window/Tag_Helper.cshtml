@addTagHelper *, Kendo.Mvc

@{
    string[] actions = new string[] { "Close" };
}

<kendo-window name="window"
              title="Rams's Ten Principles of Good Design"
              draggable="true"
              resizable="true"
              width="600"
              on-close="onClose"
              content-url="@Url.Action("AjaxContent_TagHelper", "Window")"
              actions="actions">
    <content>
        loading user info...
    </content>
    <popup-animation enabled="false" />
</kendo-window>

<span id="undo" style="display:none" >Click here to open the window.</span>

@section scripts {
<script>
    function onClose() {
        $("#undo").show();
    }

    $(document).on("kendoReady",function() {
        $("#undo").bind("click", function() {
                $("#window").data("kendoWindow").open();
                $("#undo").hide();
            });
    });
</script>
}

<style>
    #example {
        min-height: 840px;
    }

    #undo {
        text-align: center;
        position: absolute;
        white-space: nowrap;
        border-width: 1px;
        border-style: solid;
        padding: 2em;
        cursor: pointer;
    }

    .k-window {
        z-index: 100000;
    }

    @@media screen and (max-width: 1023px) {
        div.k-window {
            display: none !important;
        }
    }
</style>
