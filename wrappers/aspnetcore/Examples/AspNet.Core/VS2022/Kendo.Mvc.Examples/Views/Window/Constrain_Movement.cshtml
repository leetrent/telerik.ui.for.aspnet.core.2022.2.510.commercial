@* Make sure tag helpers are not available for the Window content *@
@removeTagHelper "*, Microsoft.AspNet.Mvc.Razor"
@removeTagHelper "*, Microsoft.AspNetCore.Mvc.Razor"

<div id="container">
</div>

@(Html.Kendo().Window()
        .Name("window")
        .Title("About Alvar Aalto")
        .Visible(true)
        .Content(@<text>
            <p>
                Alvar Aalto is one of the greatest names in modern architecture and design.
                Glassblowers at the iittala factory still meticulously handcraft the legendary vases
                that are variations on one theme, fluid organic shapes that let the end user decide the use.
            </p>
        </text>)
        .Draggable(settings => settings.Containment("#container"))
        .Actions(actions => actions
            .Minimize()
            .Maximize()
            .Pin()
        )
        .Resizable()
        .Width(300)
        .Height(250)
)

<style>
    #container {
        height: 400px;
        width: 600px;
        position: relative;
        border: 1px solid rgba(20,53,80,0.14);
    }
</style>
