@addTagHelper *, Kendo.Mvc

<kendo-window name="window"
    title="Rams's Ten Principles of Good Design"
    draggable="true"
    resizable="true"
    content-url="@Url.Action("AjaxContent","Window")"
    on-close="onClose">
    <content>
        loading user info...
    </content>
</kendo-window>

<span id="undo" style="display:none" class="k-button k-button-solid-base k-button-solid k-button-md k-rounded-md hide-on-narrow">Click here to open the window.</span>
<div class="responsive-message"></div>
@section scripts {
<script>
    function onClose() {
        $("#undo").show();
    }

    $(document).on("kendoReady",function() {
        $("#undo").bind("click", function() {
                $("#window").data("kendoWindow").open();
                $("#undo").hide();
            });
    });
</script>
}
<style>
    #example {
        min-height: 840px;
    }

    #undo {
        text-align: center;
        position: absolute;
        white-space: nowrap;
        border-width: 1px;
        border-style: solid;
        padding: 2em;
        cursor: pointer;
    }

    @@media screen and (max-width: 1023px) {
        div.k-window {
            display: none !important;
        }
    }
</style>