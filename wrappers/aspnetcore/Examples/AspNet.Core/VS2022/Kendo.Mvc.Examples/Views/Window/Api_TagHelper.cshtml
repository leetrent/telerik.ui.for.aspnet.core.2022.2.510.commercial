@addTagHelper *, Kendo.Mvc

@{
    string[] actions = new string[] { "Pin", "Refresh", "Maximize", "Close" };
}

<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <h4>API Functions</h4>
        <ul class="options">
            <li>
                <button id="open">Open</button>
                <button id="close">Close</button>
            </li>
        </ul>
    </div>
    <div class="box-col">
        <h4>&nbsp;</h4>
        <ul class="options">
            <li>
                <button id="refresh">Refresh</button>
                <button id="center">Center</button>
            </li>
        </ul>
    </div>
    <div class="box-col">
        <h4>&nbsp;</h4>
        <ul class="options">
            <li>
                <button id="pin">Pin</button>
                <button id="unpin">Unpin</button>
            </li>
        </ul>
    </div>
</div>

<kendo-window name="window"
    width="630"
    height="315"
    draggable="true"
    resizable="true"
    title="Rams's Ten Principles of Good Design"
    actions="actions"
    content-url="@Url.Action("LoadAjaxContent","Window")">
</kendo-window>

<div class="responsive-message"></div>
@section scripts {
<script>
    $(document).on("kendoReady", function() {
        var myWindow = $("#window");

        $("#open").click( function (e) {
            myWindow.data("kendoWindow").open();
        });

        $("#close").click( function (e) {
            myWindow.data("kendoWindow").close();
        });

        $("#refresh").click( function (e) {
            myWindow.data("kendoWindow").refresh();
        });

        $("#center").click( function (e) {
            myWindow.data("kendoWindow").center();
        });

        $("#pin").click( function (e) {
            myWindow.data("kendoWindow").pin();
        });

        $("#unpin").click( function (e) {
            myWindow.data("kendoWindow").unpin();
        });
    });
</script>
}
<style>
    #example {
        min-height: 600px;
    }

    .k-window {
        z-index: 100000;
    }

    @@media screen and (max-width: 1023px) {
        div.k-window {
            display: none !important;
        }
    }
</style>